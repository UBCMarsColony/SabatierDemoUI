{
  "name": "sabatier-test-reactor-ui",
  "productName": "Sabatier Test Reactor UI",
  "description": "UBC Mars Colony test reactor graphical user interface for scale Sabatier reactor. Will be used in ASCE/IAC papers and inform future UI design.",
  "version": "0.1.2",
  "private": true,
  "contributors": [
    "Thomas Richmond <thomas.joakim@gmail.com>",
    "Thomas Clarito",
    "Daniel Kong"
  ],
  "copyright": "Â© 2020, UBC Mars Colony",
  "homepage": "https://ubcmarscolony.wordpress.com/",
  "main": "app/background.js",
  "build": {
    "appId": "ubcmc.userinterface",
    "files": [
      "app/**/*",
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "res"
    },
    "publish": null
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "build": "tsc && npm run scss-compile",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron ./dist/main.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "scss-compile": "node-sass ./res/styles -o ./res/styles"
  },
  "dependencies": {
    "@types/chart.js": "^2.9.5",
    "@types/jquery": "^3.3.31",
    "@types/serialport": "^7.0.4",
    "chart.js": "^2.9.3",
    "electron-window-manager": "^1.0.6",
    "fs-jetpack": "^2.1.0",
    "serialport": "^8.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-loader": "^8.0.0-beta.4",
    "chai": "^4.1.0",
    "css-loader": "^3.1.0",
    "electron": "^9.4.0",
    "electron-builder": "^21.1.5",
    "electron-mocha": "^8.1.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^6.2.0",
    "node-sass": "^4.13.1",
    "source-map-support": "^0.5.6",
    "spectron": "^6.0.0",
    "style-loader": "^0.23.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
